{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Changed from "preserve" to "react-jsx" for better React 17+ compatibility
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowSyntheticDefaultImports": true, // Added for compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true // Enforces consistent file naming
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
